    //-   if s.type === 'product'
        
    //-   if s.type === 'pricing'
    //-     include ./includes/admin-pricing.jade           

    //-   if s.type === 'reviews'
    //-     include ./includes/admin-reviews.jade

    //-   if s.type === 'contact'
    //-     include ./includes/admin-contact.jade
    button(type="submit", class="btn btn-primary") Save Changes