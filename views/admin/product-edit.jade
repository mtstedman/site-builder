extends layout

block content
  form(class="container pt-4", method="POST", action="/api/product/#{productid}", enctype="application/x-www-form-urlencoded")
    div(class="d-flex justify-content-between align-items-end")

      h1(class="h4 mb-0")
        span(class="font-weight-light") Editing:
        span  #{product.title}
      div
        a(class="btn btn-outline-dark", href="/admin/products") Cancel
        button(type="submit", class="btn btn-success ml-2") Save Changes
    hr
    include ./includes/product-form.jade