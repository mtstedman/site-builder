section(class="container")
  div(class="row align-items-center flex-column flex-nowrap flex-md-row")
    div(class="col-auto col-md-6")
      figure
        img(src= s.product.image, class="w-100")
    div(class="col-auto col-md-6")
      h3
        span= s.product.title
        small(class="text-success")  #{s.product.currency}#{s.product.price}
      p= s.product.description
      if s.button
        div(class="row")
          div(class="col-sm-2 col-md-4")
          div(class="col col-sm-8 col-md-4 text-center")
            a(class="btn btn-outline-primary btn-block", target="_blank", href= s.button.link)= s.button.text